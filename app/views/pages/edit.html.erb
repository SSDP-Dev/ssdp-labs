
<!DOCTYPE html>
<html>
<head>
  <%= javascript_include_tag Ckeditor.cdn_url %>

</head>
<body>
  <%= form_for :posts, authenticity_token: true, url: "write" do |form| %>
  <% @front_matter.each do |key, value| %>
  <%= key %>
  <%= text_field_tag key, value %>
  <% end %>
  File Name
  <%= text_field_tag 'file', @file %>
  <%= form.cktext_area 'content', value: @content %>
  <%= form.submit 'Save'  %>
<% end  %>
</form>
<%= link_to 'Back', pages_path %>
</body>
</html>
