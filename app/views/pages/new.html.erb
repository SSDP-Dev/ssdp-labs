
<!DOCTYPE html>
<html>
<head>
  <%= javascript_include_tag Ckeditor.cdn_url %>

</head>
<body>
  <%= form_for :pages, authenticity_token: true, url: "write" do |form| %>
  Slug
  <%= text_field_tag 'file', "", class: "form-control", :required => true  %>
  Title
  <%= text_field_tag 'title', "", class: "form-control", :required => true %>
  <%= form.cktext_area 'content', :required => true  %>
