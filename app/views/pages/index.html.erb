<p id="notice"><%= notice %></p>
<h1>Posts</h1>
<%= link_to 'New Post', pages_new_path %>
<br>
<%= will_paginate @pages %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @pages.each do |f| %>
      <%  unless f == "." || f == ".." ||  f == "blog" %>
        <tr>
          <td><%= f %></td>
          <td><%= link_to 'Edit', pages_edit_path(:file => f) %></td>
          <td><%= link_to 'Destroy', pages_destroy_path(:file => f), data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<%= will_paginate @pages %>
