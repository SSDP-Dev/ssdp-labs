<p id="notice"><%= notice %></p>
<h1>Posts</h1>
<%= link_to 'New Post', posts_new_path %>
<br>
<%= will_paginate @files %>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @files.each do |f| %>
      <%  unless f == "." || f == ".." %>
        <tr>
          <td><%= f.title %></td>
          <td><%= link_to 'Edit', posts_edit_path(:file => f) %></td>
          <td><%= link_to 'Destroy', posts_destroy_path(:file => f, :id => f.id), data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<%= will_paginate @files %>
