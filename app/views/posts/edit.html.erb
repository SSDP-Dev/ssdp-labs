
<!DOCTYPE html>
<html>
<head>
  <%= javascript_include_tag Ckeditor.cdn_url %>

</head>
<body>
  <%= form_for :posts, url: "write" do |form| %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :id, @post["id"] %>
  <%= hidden_field_tag :oldslug, @post["slug"] %>

  Title
  <%= text_field_tag 'title', @post["title"], class: "form-control" %>

  <%= form.cktext_area 'content', value: @post["content"] %>
  Slug
  <%= text_field_tag 'slug', @post["slug"], class: "form-control" %>
  Status
  <%= text_field_tag 'status', @post["status"], class: "form-control" %>
  Excerpt
  <%= text_area_tag 'excerpt', @post["excerpt"], class: "form-control" %>
  <%= form.submit 'Save'  %>
<% end  %>
</form>
<%= link_to 'Back', posts_path %>
</body>
</html>
